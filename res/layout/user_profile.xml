<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:background="#f5f5f5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <RelativeLayout
                android:id="@+id/title_bar"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:background="@drawable/navbar_bk"
                android:layout_width="fill_parent"
                android:layout_height="50dp">

            <ImageButton
                    android:id="@+id/backButton"
                    android:background="@android:color/transparent"
                    android:src="@drawable/back_arr"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <TextView
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="个人信息"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/my_fav"
                android:background="@drawable/item_shadow_bk"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:layout_width="fill_parent"
                android:layout_height="50dp">

            <TextView
                    android:text="头像"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2d3538"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

            <com.tiyuzazhi.component.RoundedImageView
                    android:background="@drawable/header_bk"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:id="@+id/header"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

            <ImageView
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/to_arr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/item_shadow_bk"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:layout_width="fill_parent"
                android:layout_height="50dp">

            <TextView
                    android:text="邮箱"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2d3538"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/email"
                    android:text="aaa@aaa.com"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00367e"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <ImageView
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/to_arr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/item_shadow_bk"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_width="fill_parent"
                android:layout_height="50dp">

            <TextView
                    android:text="单位"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2d3538"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/company"
                    android:text="浙江大学"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00367e"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <ImageView
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/to_arr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/item_shadow_bk"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_width="fill_parent"
                android:layout_height="50dp">

            <TextView
                    android:text="电话"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2d3538"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/mobile"
                    android:text="未设置"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#abadae"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <ImageView
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/to_arr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:id="@+id/logout"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:text="退出帐号"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/feet_red_selector"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>