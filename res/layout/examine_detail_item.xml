<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingRight="15dp"
              android:paddingLeft="15dp"
              android:background="#f5f5f5"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/dateDay"
                android:text="2014/01/01"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#90999c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_gravity="right"
                android:id="@+id/step"
                android:text="审稿专家"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#90999c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

        <ImageView
                android:src="@drawable/point_xhdpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="#d9e0e2"
                android:layout_gravity="center_horizontal"
                android:layout_width="2dp"
                android:layout_height="fill_parent"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:visibility="gone"
                android:id="@+id/commPanel"
                android:layout_marginLeft="10dp"
                android:background="@drawable/module_bg"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:padding="10dp"
                    android:id="@+id/stepDetail"
                    android:text="专家审稿:退稿"
                    android:textSize="18sp"
                    android:textColor="#2d3538"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="#d8d8d8"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"/>

            <TextView
                    android:id="@+id/systemNotify"
                    android:padding="10dp"
                    android:text="专家正在审稿，请耐心等待，感谢你的支持"
                    android:textSize="16sp"
                    android:textColor="#90999c"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/module_bg"
                android:id="@+id/attachmentPanel"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:src="@drawable/word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/attachmentText"
                    android:layout_marginLeft="10dp"
                    android:text="评审意见-2313"
                    android:textSize="18sp"
                    android:textColor="#00367e"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>